# /etc/network/interfaces template for switches (leaf02)
# Created by Ansible

auto lo
iface lo inet loopback
  address 10.0.0.12/32

auto eth0
iface eth0 inet dhcp
   vrf mgmt
   
auto mgmt
iface mgmt
   address 127.0.0.1/8
   vrf-table auto

auto swp2
iface swp2 inet static
  address 172.16.1.1/24
  post-up echo 1 > /proc/sys/net/ipv4/conf/swp2/proxy_arp
  mtu 9216

auto swp1
iface swp1
  mtu 9216


auto swp51
iface swp51
  mtu 9216

auto swp52
iface swp52
  mtu 9216


# /etc/network/interfaces template for switches (leaf01)
# Created by Ansible

auto lo
iface lo inet loopback
  address 10.0.0.11/32

auto eth0
iface eth0 inet dhcp
   vrf eth0
   
auto mgmt
iface mgmt
   address 127.0.0.1/8
   vrf-table auto

auto swp2
iface swp2
  mtu 9216

auto swp1
iface swp1
  address 172.16.1.1/24
  post-up echo 1 > /proc/sys/net/ipv4/conf/swp1/proxy_arp
  mtu 9216
  
auto swp51
iface swp51
  mtu 9216
  
auto swp52
iface swp52
  mtu 9216
